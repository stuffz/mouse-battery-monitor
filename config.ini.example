# Mouse Battery Monitor Configuration

# Update interval in seconds (default: 300 seconds for responsive updates)
# Can be increased to reduce resource usage (e.g., 60 or 300)
update_interval_seconds = 300

# Show notifications for low battery
show_notifications = true

# Battery percentage threshold for low battery warning (default: 20%)
low_battery_threshold = 20

# Debug mode - shows console window and verbose logging (default: false)
debug_mode = false
